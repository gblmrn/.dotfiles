# general settings
auto-reload yes
# max-items 50

external-url-viewer "urlscan -dc -r 'linkhandler {}'"

# unbind keys 
unbind-key ENTER
unbind-key j
unbind-key k
unbind-key J
unbind-key K

# bind keys - vim style
bind-key j down
bind-key k up
bind-key l open
bind-key h quit

# colors
color background          white   default
color listnormal          white   default
color listfocus           white   default bold
color listnormal_unread   blue    default
color listfocus_unread    blue    default bold
color info                white   default bold
color article             white   default

# macros
browser linkhandler
macro , open-in-browser
#macro t set browser "qndl" ; open-in-browser ; set browser linkhandler
macro t set browser "w3m" ; open-in-browser ; set browser linkhandler
macro m set browser "yt-dlp -q %u -o  - | mpv - -force-seekable=yes &" ; open-in-browser ; set browser linkhandler
macro f set browser "firefox %u" ; open-in-browser ; set browser linkhandler
macro w set browser "lynx" ; open-in-browser ; set browser linkhandler
macro c set browser "echo %u | xclip -r -sel c" ; open-in-browser ; set browser linkhandler

