# general settings
auto-reload yes
max-items 50

# unbind keys 
unbind-key ENTER
unbind-key j
unbind-key k
unbind-key J
unbind-key K

# bind keys - vim style
bind-key j down
bind-key k up
bind-key l open
bind-key h quit

# colors
color background          white   default
color listnormal          white   default
color listfocus           white   default bold
color listnormal_unread   white   default
color listfocus_unread    white   default bold
color info                white   default bold
color article             white   default

#browser
browser "w3m %u"

##########
# videos #
##########

#####################
# Default url pattern:
# https://www.youtube.com/feeds/videos.xml?*_id=
# Where * is (channel, playlist)
# after id= we put the id of a certain link :D
#####################


##########
# macros #
##########
macro m set browser "yt-dlp -q %u -o  - | mpv - -force-seekable=yes &" ; open-in-browser ; set browser "w3m %u"
#macro m set browser "mpv %u" ; open-in-browser ; set browser "w3m %u"
macro f set browser "firefox %u" ; open-in-browser ; set browser "w3m %u"
